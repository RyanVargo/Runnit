<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context=".GuestScreen">

    <Button
        android:id="@+id/easterEgg"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:background="@drawable/transparent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="71dp"
        android:text="@string/welcome_to_runnit"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="48sp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:visibility="invisible"
        android:id="@+id/spacer1"/>

    <Button
        android:id="@+id/paceButton"
        android:layout_width="176dp"
        android:layout_height="104dp"
        android:background="@drawable/roundedbutton"
        android:text="@string/pace_calculator" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:visibility="invisible"
        android:id="@+id/spacer2"/>

    <Button
        android:id="@+id/predictorButton"
        android:layout_width="176dp"
        android:layout_height="104dp"
        android:layout_marginBottom="198dp"
        android:background="@drawable/roundedbutton2"
        android:text="@string/race_predictor" />

    <ImageView
        android:id="@+id/runnersImage"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:contentDescription="@string/todo"
        android:src="@drawable/menrunners" />

</LinearLayout>